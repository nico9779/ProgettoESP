<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/alarm_title_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prova"/>

        <TextView
            android:id="@+id/alarm_hour_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alarm_title_item"
            android:text="10"/>

        <TextView
            android:id="@+id/alarm_minute_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alarm_hour_item"
            android:text="20"/>

        <TextView
            android:id="@+id/alarm_vibration_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alarm_minute_item"
            android:text="On"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>